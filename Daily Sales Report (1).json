    {
      "parameters": {
        "jsCode": "const transactions = $input.all();\nlet totalSales = 0;\nlet salesByPerson = {};\n\ntransactions.forEach(item => {\n  // Convert the Amount to a number first, and handle the dollar sign if it exists\n  const amount = parseFloat(item.json.Amount.toString().replace('$', ''));\n  if (!isNaN(amount)) {\n    totalSales += amount;\n    salesByPerson[item.json.SalesPerson] = (salesByPerson[item.json.SalesPerson] || 0) + amount;\n  }\n});\n\nlet topSalesperson = null;\nlet topSalespersonAmount = 0;\n\nfor (const person in salesByPerson) {\n  if (salesByPerson[person] > topSalespersonAmount) {\n    topSalespersonAmount = salesByPerson[person];\n    topSalesperson = person;\n  }\n}\n\nreturn [{ json: {\n  totalTransactions: transactions.length,\n  // Add the dollar sign to the totalSalesAmount\n  totalSalesAmount: '$' + totalSales,\n  topSalesperson: topSalesperson,\n  // Add the dollar sign to the topSalespersonAmount\n  topSalespersonAmount: '$' + topSalespersonAmount\n}}];"
      },
